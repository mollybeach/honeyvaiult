# Praxos Environment Configuration
# Copy this file to .env and fill in your values
# WARNING: Never commit .env to git!

# ============================================
# Required for Deployment
# ============================================

# Private key for deployment (without 0x prefix)
# Get from MetaMask: Account Details > Export Private Key
# WARNING: This is sensitive! Never share or commit!
PRIVATE_KEY=your_private_key_here_without_0x_prefix

# ============================================
# Network Configuration
# ============================================

# Rayls Devnet RPC URL (default: https://devnet-rpc.rayls.com)
RAYLS_RPC_URL=https://devnet-rpc.rayls.com

# ============================================
# Optional Configuration
# ============================================

# Etherscan API key for contract verification (optional)
# Get from: https://devnet-explorer.rayls.com
ETHERSCAN_API_KEY=

# Wallet address for balance checking script (optional)
# Used by: make check-balance
WALLET_ADDRESS=

# ============================================
# Contract Addresses (set after deployment)
# ============================================

# PraxosFactory contract address
PRAXOS_FACTORY_ADDRESS=

# MockUSDC base asset address
MOCK_USDC_ADDRESS=

# MockERC3643 RWA token addresses
MOCK_ERC3643_CORPORATE_BOND_ALPHA_ADDRESS=
MOCK_ERC3643_REAL_ESTATE_BETA_ADDRESS=
MOCK_ERC3643_STARTUP_FUND_GAMMA_ADDRESS=

# PraxosVault address (demo vault)
PRAXOS_VAULT_ADDRESS=
